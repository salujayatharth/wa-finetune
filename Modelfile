# Ollama Modelfile for WhatsApp Style Model
# ==========================================
#
# Usage:
#   1. Place your GGUF file in outputs/gguf/
#   2. Update the FROM path below if needed
#   3. Run: ollama create myname-style -f Modelfile
#   4. Test: ollama run myname-style "hey whats up"

# Point to your exported GGUF file
FROM ./outputs/gguf/unsloth.Q5_K_M.gguf

# Llama 3.1 chat template
TEMPLATE """{{ if .System }}<|start_header_id|>system<|end_header_id|>

{{ .System }}<|eot_id|>{{ end }}{{ if .Prompt }}<|start_header_id|>user<|end_header_id|}

{{ .Prompt }}<|eot_id|>{{ end }}<|start_header_id|>assistant<|end_header_id|>

{{ .Response }}<|eot_id|>"""

# System prompt - customize with your name/style description
SYSTEM "You are a helpful assistant. Respond naturally in your conversational style."

# Generation parameters tuned for natural conversation
PARAMETER temperature 0.7
PARAMETER top_p 0.9
PARAMETER top_k 40
PARAMETER repeat_penalty 1.1

# Stop tokens for Llama 3.1
PARAMETER stop "<|eot_id|>"
PARAMETER stop "<|end_of_text|>"
